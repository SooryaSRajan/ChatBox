<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".email_create">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textEmailAddress"
        android:layout_centerInParent="true"
        android:id="@+id/email_id"
        android:layout_above="@+id/password_1"
        android:hint="Enter Email..."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_id"
        android:textColor="@color/colorRed"
        android:layout_toEndOf="@+id/email_id"
        android:textSize="15sp"
        android:id="@+id/alert_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:hint="Enter Passsword"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:id="@+id/password_1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:layout_centerInParent="true"
        android:layout_below="@+id/password_1"
        android:hint="Enter Passsword again"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:id="@+id/password_2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Create!"
        android:id="@+id/create"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/password_2"/>

</RelativeLayout>